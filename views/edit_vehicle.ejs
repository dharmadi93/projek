<!DOCTYPE html>
<html>
<head>
    <% include head.ejs %>
</head>
<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">


<!-- BEGIN HEADER -->
<% include top_header.ejs %>
<!-- END HEADER -->


<div class="clearfix"> </div>

<div class="page-container">
    <!-- BEGIN SIDEBAR -->
    <% include sidebar.ejs %>
    <!-- END SIDEBAR -->

    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">
            <div class="page-bar">
                <ul class="page-breadcrumb">
                    <% include home_link.ejs %>
                    <li>
                        <span>Add Vehicle</span>
                    </li>
                </ul>
            </div>
            <!-- END PAGE BAR -->
            <!-- BEGIN PAGE TITLE-->
            <h3 class="page-title"> Add Vehicle</h3>
            <!-- END PAGE TITLE-->
            <!-- END PAGE HEADER-->




            <!-- BEGIN DASHBOARD STATS 1-->
            <div class="row">
              <div class="col-sm-12">
                <form class="form-horizontal" method="post" action="/dashboard/edit_vehicle">

                  <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd">Owner Id:</label>
                    <div class="col-sm-10">
                      <label class="form-control"><%= vehicle.UserId%></label>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="control-label col-sm-2">Vehicle Type:</label>
                    <div class="col-sm-10">
                      <select class="form-control" name="type">
                        <option value="<%= vehicle.type%>"><%= vehicle.type%></option>
                        <option value="mobil">Mobil</option>
                        <option value="motor">Motor</option>
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="control-label col-sm-2">Number Plate:</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" name="number_plate" value="<%= vehicle.number_plate%>">
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="control-label col-sm-2">STNK:</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" name="stnk" value="<%= vehicle.stnk%>">
                    </div>
                  </div>

                  <input type="hidden" name="vehicle_id" value="<%= vehicle.id%>">

                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>

            <!-- END DASHBOARD STATS 1-->


        </div>
        <!-- END CONTENT BODY -->
    </div>
    <!-- END CONTENT -->

</div>
<!-- END CONTAINER -->
<!-- BEGIN FOOTER -->
<% include footer.ejs %>
<!-- END FOOTER -->


<% include script.ejs %>

</body>
</html>
